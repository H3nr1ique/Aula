#include <stdio.h>
    
    //Mostra o cardápio da lanchonete e finaliza o pedido
    int main(){
        int item, quantidade;
        float total = 0, parcial;
        
        print("===Lanchonete da Escola===\n");
        
        do {
            printf("\nCardápio:\n");
            printf("1 - Cachorro Quente - (R$5.00)\n");
            printf("2 - X-Salada -------- (R$8.00)\n");
            printf("3 - Refrigerante ---- (R$4.00)\n");
            printf("4 - Suco Natural ---- (R$6.00)\n");
            printf("5 - Finalizar Pedido\n");
            
            printf("\nEscolha o item: ");
            scanf("%d, &opcao);
            
            if (opcao == 0) break;
            
            printf("informe a quantidade: ");
            scanf("%d, &quantidade");
            switch(opcao) {
                case1 :
                    parcial = quantidade * 5.0;
                    printf("Vocẽ pediu %d Cachorro(s) Quente: R$ %.2f\n", quantidade, parcial);
                    total += parcial;
            }
        }
    }
