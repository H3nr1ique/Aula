// Tabuada no console com if/else

// Pergunta ao usuário qual tabuada deseja
let numero = parseInt(prompt("Digite o número da tabuada que deseja calcular:"));

// Verifica se o valor é válido
if (isNaN(numero)) {
    console.log("Você não digitou um número válido!");
} else {
    console.log("Tabuada do " + numero + ":");

    let i = 1;
    while (i <= 10) {
        console.log(numero + " x " + i + " = " + (numero * i));
        i++;
    }
}
